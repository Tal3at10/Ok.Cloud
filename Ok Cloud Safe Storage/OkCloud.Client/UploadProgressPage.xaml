<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OkCloud.Client.UploadProgressPage"
             Title="Uploading..."
             BackgroundColor="#0f0f0f">

    <Grid Padding="40">
        <VerticalStackLayout Spacing="30" VerticalOptions="Center">
            
            <!-- Upload Icon -->
            <Frame BackgroundColor="#1a1a1a" 
                   BorderColor="#2a2a2a"
                   CornerRadius="20"
                   Padding="30"
                   HorizontalOptions="Center"
                   HasShadow="False">
                <Label Text="ðŸ“¤" FontSize="60" HorizontalOptions="Center"/>
            </Frame>

            <!-- File Name -->
            <Label x:Name="FileNameLabel" 
                   Text="Uploading file..."
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>

            <!-- Progress Info -->
            <VerticalStackLayout Spacing="10">
                <Label x:Name="ProgressLabel" 
                       Text="0%"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#ff5500"
                       HorizontalTextAlignment="Center"/>
                
                <ProgressBar x:Name="UploadProgressBar"
                             Progress="0"
                             ProgressColor="#ff5500"
                             HeightRequest="8"
                             Margin="0,10,0,0"/>
                
                <Label x:Name="SpeedLabel"
                       Text="Calculating speed..."
                       FontSize="14"
                       TextColor="#999"
                       HorizontalTextAlignment="Center"/>
                
                <Label x:Name="TimeRemainingLabel"
                       Text="Estimating time..."
                       FontSize="14"
                       TextColor="#999"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <!-- Cancel Button -->
            <Button x:Name="CancelButton"
                    Text="Cancel Upload"
                    BackgroundColor="Transparent"
                    TextColor="#999"
                    BorderColor="#333"
                    BorderWidth="1"
                    CornerRadius="8"
                    Padding="20,12"
                    FontSize="14"
                    HorizontalOptions="Center"
                    Clicked="OnCancelClicked"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
